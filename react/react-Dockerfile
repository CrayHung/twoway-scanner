# FROM node:14
# WORKDIR /app
# COPY ./xinwu/build/ ./        
# RUN npm install
# CMD ["npm","start"]

# 使用 Node 作為基礎映像
FROM node:14 AS build

# 設定工作目錄
WORKDIR /app

# 複製 package.json 和 package-lock.json 以安裝依賴
COPY ./xinwu/package*.json ./

# 安裝依賴
RUN npm install

# 複製 React 源碼
COPY xinwu/ ./

# 執行建置指令
RUN npm run build

CMD ["npm","start"]